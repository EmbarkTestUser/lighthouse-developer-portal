{
  "name": "root",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "14 || 16"
  },
  "scripts": {
    "dev": "concurrently \"yarn start\" \"yarn start-backend\"",
    "start": "yarn workspace @department-of-veterans-affairs/app start",
    "start-backend": "yarn workspace @department-of-veterans-affairs/backend start",
    "backstage-update": "yarn backstage-cli versions:bump 2>&1 | tee backstage-update-log.txt",
    "build": "lerna run build",
    "build backend": "yarn workspace @department-of-veterans-affairs/backend backstage-cli backend:bundle",
    "build frontend": "cp app-config.yaml app-config.dev.yaml app-config.qa.yaml app-config.production.yaml packages/app/ && yarn workspace @department-of-veterans-affairs/app backstage-cli app:build --config app-config.yaml --config app-config.production.yaml",
    "build-image": "yarn workspace @department-of-veterans-affairs/backend build-image",
    "tsc": "tsc",
    "tsc:full": "tsc --skipLibCheck false --incremental false",
    "clean": "backstage-cli clean && lerna run clean",
    "diff": "lerna run diff --",
    "test": "backstage-cli test",
    "test:all": "mkdir -p ./logs && lerna run test -- --coverage 2>&1 | tee ./logs/unit-tests.txt",
    "lint": "lerna run lint --since origin/main --",
    "lint:all": "lerna run lint --",
    "create-plugin": "backstage-cli create-plugin --scope internal",
    "remove-plugin": "backstage-cli remove-plugin",
    "release": "heroku container:push web -a lighthouse-backstage && heroku container:release web -a lighthouse-backstage",
    "prettier:check": "prettier --check ."
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/app/*",
      "plugins/*"
    ]
  },
  "devDependencies": {
    "@backstage/cli": "^0.10.1",
    "@spotify/prettier-config": "^11.0.0",
    "concurrently": "^6.0.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "snyk": "^1.737.0"
  },
  "prettier": "@spotify/prettier-config",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint",
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@changesets/cli": "^2.16.0",
    "@octokit/core": "^3.5.1"
  },
  "metadata": {
    "backstage-create-app-version": "0.4.8"
  },
  "jest": {
    "coverageReporters": [
      "json",
      [
        "lcov",
        {
          "projectRoot": "../../"
        }
      ],
      "text",
      "clover",
      "text-summary"
    ]
  },
  "resolutions": {
    "esbuild": "^0.14.0"
  }
}
