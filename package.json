{
  "name": "root",
  "version": "2.0.0",
  "private": true,
  "engines": {
    "node": "12 || 14"
  },
  "scripts": {
    "dev": "concurrently \"yarn start\" \"yarn start-backend\"",
    "start": "yarn workspace app start",
    "start-backend": "yarn workspace backend start",
    "backstage-update": "yarn backstage-cli versions:bump 2>&1 | tee backstage-update-log.txt",
    "build": "lerna run build",
    "build-image": "yarn workspace backend build-image",
    "tsc": "tsc",
    "tsc:full": "tsc --skipLibCheck false --incremental false",
    "clean": "backstage-cli clean && lerna run clean",
    "diff": "lerna run diff --",
    "test": "lerna run test --since origin/main -- --coverage",
    "test:all": "mkdir -p ./logs && lerna run test -- --coverage 2>&1 | tee ./logs/unit-tests.txt",
    "lint": "lerna run lint --since origin/main --",
    "lint:all": "lerna run lint --",
    "create-plugin": "backstage-cli create-plugin --scope internal --no-private",
    "remove-plugin": "backstage-cli remove-plugin",
    "release": "heroku container:push web -a lighthouse-backstage && heroku container:release web -a lighthouse-backstage",
    "prettier:check": "prettier --check .",
    "yarn release": "yarn changeset publish",
    "yarn version": "yarn changeset version",
    "pulumi": "cd ./pulumi && ./start.sh",
    "swap-codespaces": "./pulumi/swap-codespaces.sh"
  },
  "resolutions": {
    "graphql-language-service-interface": "2.8.2",
    "graphql-language-service-parser": "1.9.0"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "plugins/*"
    ]
  },
  "devDependencies": {
    "@backstage/cli": "^0.7.7",
    "@spotify/prettier-config": "^7.0.0",
    "concurrently": "^6.0.0",
    "lerna": "^4.0.0",
    "prettier": "^2.3.2"
  },
  "prettier": "@spotify/prettier-config",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@changesets/cli": "^2.16.0"
  },
  "metadata": {
    "backstage-create-app-version": "0.3.35"
  },
  "jest": {
    "coverageDirectory": "../../../logs/coverage"
  }
}
